<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eriberto.pokedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_pokedex"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pokedex_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Pokedex">
        <activity android:name=".view.detalhe.DetalhePokemonActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.main.ListaPokemonActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>